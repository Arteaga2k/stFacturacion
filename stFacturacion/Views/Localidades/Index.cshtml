@model IEnumerable<stFacturacion.Models.localidad>

@{
    ViewBag.Title = "Index";
}

<p><h1>Lista <small>de localidades</small></h1></p>

<p>
    @Html.ActionLink("[+] Crear nuevo", "Create",null,new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-condensed">
<thead>
    <tr>
        <th>
            nombre
        </th>
        <th></th>
    </tr>
</thead>
<tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.localidadId} ,new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.localidadId}, new {@class ="btn" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.localidadId }, new { @class = "btn" })
        </td>
    </tr>
}
</tbody>
</table>
