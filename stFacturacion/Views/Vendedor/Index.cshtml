@model IEnumerable<stFacturacion.Models.Vendedor>

@{
    ViewBag.Title = "Index";
}

<p><h1>Lista <small>de vendedores</small></h1></p>
 
<p>@Html.ActionLink("[+] Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>Nombre</th>
        <th>Dirección</th>
        <th>Código Postal</th>
        <th>Ciudad</th>
        <th>País</th>
        <th>Localidad</th>
        <th>Teléfono</th>
        <th>Móvil</th>        
        <th>E-mail</th>
        <th>Comisión</th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.localidad.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tlf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.movil)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comision)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.vendedorId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id = item.vendedorId }, new { @class = "btn" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.vendedorId }, new { @class = "btn" })
        </td>
    </tr>
}

</table>
