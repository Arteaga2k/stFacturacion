@using stFacturacion.CustomHelpers
@model stFacturacion.Models.Articulo
           
  <div class="control-group"> 
        @Html.LabelFor(model => model.tarifa, "Tarifa", new { @class = "control-label" })
    <div class="controls">  
        @Html.DropDownList("tarifaId", ViewBag.tarifas as SelectList,String.Empty)
        
        <a class="btn btn-small btn-primary" href="@Url.Content("~/Tarifas/Create")" 
        id="tarifaAddLink">
        <i class="icon-plus icon-white"></i> Añadir</a>
        
        @Html.ValidationMessageFor(model => model.tarifaId)
    </div>
  </div>
<div id="tarifaDialog" class="hidden">
</div>


<script src="@Url.Content("~/Scripts/chooseTarifa.js")"></script>


